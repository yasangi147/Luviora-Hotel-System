# Luviora Hotel System - Apache Configuration
# Redirect all HTML files to PHP equivalents

# Enable Rewrite Engine
RewriteEngine On

# Redirect HTML files to PHP versions
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)\.html$ $1.php [L,R=301]

# Redirect specific HTML pages to their PHP equivalents
RedirectMatch 301 ^/index\.html$ /index.php
RedirectMatch 301 ^/aboutus\.html$ /aboutus.php
RedirectMatch 301 ^/roomlist-1\.html$ /roomlist-1.php
RedirectMatch 301 ^/testimonial\.html$ /testimonial.php
RedirectMatch 301 ^/blog-full\.html$ /blog-full.php
RedirectMatch 301 ^/gallery\.html$ /gallery.php
RedirectMatch 301 ^/service\.html$ /service.php
RedirectMatch 301 ^/contact\.html$ /contact.php
RedirectMatch 301 ^/availability\.html$ /availability.php
RedirectMatch 301 ^/room-select\.html$ /room-select.php
RedirectMatch 301 ^/booking\.html$ /booking.php
RedirectMatch 301 ^/confirmation\.html$ /confirmation.php
RedirectMatch 301 ^/login\.html$ /login.php

# Prevent directory listing
Options -Indexes

# Protect sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect config files
<FilesMatch "(composer\.json|composer\.lock|\.md)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Set default index files
DirectoryIndex index.php index.html

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript
</IfModule>

# Browser caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

